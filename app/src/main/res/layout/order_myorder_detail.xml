<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fff">
    <include layout="@layout/topbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/my_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/condition1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="物品类型"
                    android:textColor="@color/colorSub"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/condition2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="烤肉拌饭  约14元"
                    android:textColor="@color/colorTex"

                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/condition1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="发起时间"
                    android:textColor="@color/colorSub"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/condition2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="2017-5-7 19：00"
                    android:textColor="@color/colorTex"

                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/condition1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单详情"
                    android:textColor="@color/colorSub"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/condition2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="下沉广场的烤肉拌饭，麻辣味嘎嘣脆，味道好极了不吃不是人。"
                    android:textColor="@color/colorTex"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/condition1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="悬赏金额"
                    android:textColor="@color/colorSub"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/condition2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="5元"
                    android:textColor="@color/colorTex"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colordevider"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/condition1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单状态"
                    android:textColor="@color/colorSub"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/condition2"
                    android:layout_width="110dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="待配送"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colordevider"
                android:padding="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/my_order_info"
            android:layout_marginTop="@dimen/logo_margin_top"
            android:padding="20dp"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/img_float_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/fab_phone_bg"
                android:src="@drawable/fab_phone" />

            <ImageButton
                android:id="@+id/img_float_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="200dp"
                android:background="@drawable/fab_back_bg"
                android:src="@drawable/fab_back"
                android:layout_weight="0.08" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
