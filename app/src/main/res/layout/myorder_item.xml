<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#DEDEDE"
    android:orientation="vertical" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/myorder_item"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@drawable/card_light"
            android:orientation="horizontal"
            android:padding="10dp"
            android:baselineAligned="false"
           >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.32">
                <TextView
                    android:id="@+id/myorder_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/myorder_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/myorder_date_title"
                    android:layout_toEndOf="@+id/myorder_date_title"
                    android:layout_toRightOf="@+id/myorder_date_title"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/myorder_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:text="配送内容："
                    android:textColor="#1F1F1F"
                    android:textSize="18sp"
                    android:layout_below="@+id/myorder_date_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:id="@+id/myorder_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="4"
                    android:text="16号楼→嘉园\nPY一份"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/myorder_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textSize="18sp"
                    android:textColor="#7CFC00"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginEnd="18dp" />


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>