<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/topbar_layout"/>


        <RelativeLayout
            android:id="@+id/avatar_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/boarder"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:focusable="true">

            <xzh.com.materialdesign.view.CircleImageView
                android:id="@+id/my_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:src="@drawable/avatar" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nickname_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boarder"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="昵称"
                android:textColor="@color/gray"
                android:textSize="40px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pwd_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="密码"
                android:textColor="@color/gray"
                android:textSize="40px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sex_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="性别"
                android:textColor="@color/gray"
                android:textSize="40px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="@color/gray"
                android:textSize="40px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/age_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="年龄"
                android:textColor="@color/gray"
                android:textSize="40px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/school_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="学校"
                android:textColor="@color/gray"
                android:textSize="40px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="邮箱"
                android:textColor="@color/gray"
                android:textSize="40px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boarder"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/my_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="电话"
                android:textColor="@color/gray"
                android:textSize="40px" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>