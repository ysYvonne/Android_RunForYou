<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <xzh.com.materialdesign.view.TitleBar
        android:id="@+id/title_bar4"
        style="@style/title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/nickname_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boarder">

            <TextView
                android:id="@+id/nickname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="昵称    "
                android:textColor="@color/base_color_text_black"
                android:textSize="30px" />

            <EditText
                android:id="@+id/nickname_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColorHint="@color/gray"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/nickname_textview"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/wrong"
                android:layout_alignTop="@+id/nickname_textview"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true" />


        </RelativeLayout>

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textColor="@color/gray"
            android:textSize="12dp"
            android:gravity="center"
            android:text="不能添加特殊字符，6-18个字符" />

        <Button
            android:id="@+id/nickname_ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/myPrimaryColor"
            android:text="确认" />

        <Button
            android:id="@+id/nickname_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/myPrimaryColor"
            android:text="取消" />


    </LinearLayout>


</LinearLayout>