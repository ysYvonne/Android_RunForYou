<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/topbar_layout"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nickname_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boarder"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/nickname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="昵称    "
                android:textColor="@color/base_color_text_black"
                android:textSize="30px" />

            <EditText
                android:id="@+id/nickname_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="20"
                android:textColorHint="@color/gray"
                android:textColor="@color/base_color_text_black"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/nickname_textview"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textColor="@color/gray"
            android:textSize="12dp"
            android:gravity="center"
            android:text="不能添加特殊字符，6-18个字符" />

        <Button
            android:id="@+id/nickname_ok_button"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/myPrimaryColor"
            android:text="确认"
            android:clickable="true"/>

        <Button
            android:id="@+id/nickname_cancel_button"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/myPrimaryColor"
            android:text="取消"
            android:clickable="true"/>


    </LinearLayout>


</LinearLayout>